{
  "extends": "solium:all",
  "plugins": ["security"],
  "rules": {
    "quotes": ["error", "double"],
    "blank-lines": "off",
    "no-empty-blocks": "off",
    "indentation": ["warning", 2],
    "max-len": ["off"],
    "no-constant": ["error"],
    "security/enforce-explicit-visibility": ["error"],
    "security/no-block-members": ["warning"],
    "security/no-inline-assembly": ["warning"],
    "security/no-tx-origin": ["warning"]
  }
}